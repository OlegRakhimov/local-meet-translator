{
  "manifest_version": 3,
  "name": "Local Meet Translator (no key in extension)",
  "version": "1.4.0",
  "description": "Translate web calls with a localhost bridge. Adds optional outgoing mic->translated voice routing via virtual mic.",
  "permissions": [
    "storage",
    "activeTab",
    "tabCapture",
    "audioCapture",
    "scripting",
    "offscreen",
    "tabs"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://*.zoom.us/*",
    "https://app.zoom.us/*",
    "https://teams.microsoft.com/*",
    "https://teams.live.com/*"
  ],
  "action": {
    "default_title": "Local Meet Translator",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://*.zoom.us/*",
        "https://app.zoom.us/*",
        "https://teams.microsoft.com/*",
        "https://teams.live.com/*"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "mic_permission.html",
    "open_in_tab": true
  }
}

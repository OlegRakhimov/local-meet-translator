{
  "manifest_version": 3,
  "name": "Local Meet Translator (no key in extension)",
  "version": "1.3.1",
  "description": "Captures tab audio (Meet/Zoom/Teams), sends to localhost Java bridge for transcription+translation, shows movable subtitles and optional local TTS.",
  "permissions": [
    "storage",
    "activeTab",
    "tabCapture",
    "scripting",
    "offscreen",
    "tabs"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://*.zoom.us/*",
    "https://app.zoom.us/*",
    "https://teams.microsoft.com/*",
    "https://teams.live.com/*"
  ],
  "action": {
    "default_title": "Local Meet Translator",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://*.zoom.us/*",
        "https://app.zoom.us/*",
        "https://teams.microsoft.com/*",
        "https://teams.live.com/*"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_idle"
    }
  ]
}